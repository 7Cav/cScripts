root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.hpp]
indent_style = space
indent_size = 4

[*.cpp]
indent_style = space
indent_size = 4

[*.sqf]
indent_style = space
indent_size = 4